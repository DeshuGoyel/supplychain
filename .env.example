# Database Configuration
# PostgreSQL (required for production)
DATABASE_URL="postgresql://username:password@localhost:5432/supplychain_db?schema=public"
# For production with Railway, Supabase or other cloud providers:
# DATABASE_URL="postgresql://username:password@your-host:5432/database?schema=public&sslmode=require"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-32-characters-minimum"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# OpenAI API (for future AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:3002"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# SendGrid Configuration (for emails)
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"
SENDGRID_FROM_EMAIL="noreply@supply-chain-io.com"
SENDGRID_FROM_NAME="Supply Chain Control Tower"

# Frontend URL (for email links and CORS)
FRONTEND_URL="http://localhost:3000"

# Sentry Configuration (for error tracking)
SENTRY_DSN="https://your-sentry-dsn-here"

# Analytics Configuration (Mixpanel or Amplitude)
MIXPANEL_TOKEN="your_mixpanel_token_here"

# Encryption (used for 2FA secrets/backup codes)
# 32 bytes, provided as base64 (recommended) or 64 hex chars
ENCRYPTION_KEY=""

# Public API URL (used for generating absolute links like SAML ACS)
API_PUBLIC_URL="http://localhost:3001"

# White-labeling
WHITELABEL_CNAME_TARGET="app.yourdomain.com"
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_PUBLIC_URL_BASE=""

# SAML
SAML_SP_ENTITY_ID="urn:scaca:sp"
SAML_ASSERTION_CONSUMER_URL="http://localhost:3001/api/auth/saml/assertion"
SAML_CERT_PATH=""

# Two-Factor
TWOFA_ISSUER="SCACA"