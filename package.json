{
  "name": "supplychain-ai-backend",
  "version": "1.0.0",
  "description": "Supply Chain AI Control Assistant - Backend Infrastructure",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "seed": "ts-node src/seeds/seed.ts",
    "seed:dashboard": "ts-node src/seeds/seedDashboard.ts",
    "seed:production": "ts-node src/seeds/seedProduction.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prod:setup": "npm run prisma:migrate:deploy && npm run prisma:generate && npm run seed:production",
    "prod:build": "npm run build && npm run prod:setup"
  },
  "keywords": [
    "supply-chain",
    "ai",
    "control-tower",
    "express",
    "postgresql"
  ],
  "author": "Supply Chain AI Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
